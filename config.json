{
  "name": "Heating Mqtt Bridge",
  "version": "1.3",
  "slug": "roth2mqtt",
  "description": "This tiny bridge polls the central station of Roth EnergyLogic and pushes all information to an Mqtt broker.",
  "url": "https://github.com/MortenVinding/HeatingMqttBridge",
  "startup": "application",
  "services": [
    "mqtt:need"
  ],
  "boot": "auto",
  "init": false,
  "ingress": true,
  "timeout": 30,
  "options": {
    "mqtt": {}
  },
  "schema": {
    "mqtt": {
      "server": "str?",
      "ca": "str?",
      "key": "str?",
      "cert": "str?",
      "user": "str?",
      "password": "str?"
    },
  },
  "image": "aklitzing/heatingmqttbridge"
}
